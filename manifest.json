{
  "manifest_version": 3,
  "name": "Morning Reader",
  "version": "0.0.63",
  "description": "Open assigned web pages for reading each morning.",
  "icons": {
    "16": "images/icon16.png",
    "32": "images/icon32.png",
    "48": "images/icon48.png",
    "128": "images/icon128.png"
  },
  "permissions": [
    "storage",
    "tabs",
    "bookmarks",
    "downloads",
    "notifications",
    "contextMenus"
  ],
  "action": {
    "default_title": "Morning Reader",
    "default_icon": {
      "16": "images/icon16.png",
      "32": "images/icon32.png",
      "48": "images/icon48.png",
      "128": "images/icon128.png"
    }
  },
  "background": {
    "service_worker": "scripts/background.js"
  },
  "options_page": "options.html"
}